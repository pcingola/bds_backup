#!/usr/bin/env bds

# This variable is use to indicate that help should be shown unsorted (i.e. in the same order that variables are declared)
helpUnsorted := true

useTab := false	help Use tab before printing line
someVeryLongCommandLineArgumentName := true    help This command line argument has a really long name
salutation := "hi"	help Salutation to use
int num = 3		help Number of times 'hi' should be printed
int min			help Help for argument 'min' should be printed here
mean := 5		help Help for argument 'mean' should be printed here

for( int i=0 ; i < num ; i++ ) {
	if( useTab ) print "\t"
	print "$salutation $i\n"
}

print "Done\n"
