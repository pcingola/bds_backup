#!/usr/bin/env bds

prefix := "test/checkpoint_08"
txt := prefix + ".txt"
csv := prefix + ".csv"
xml := prefix + ".xml"

dep ( csv <- txt ) sys cp $txt $csv; echo "copying to csv"
dep ( xml <- csv ) sys cp $csv $xml; echo "copying to xml"

checkpoint prefix + ".chp"

ids := goal xml
num := ids.size()
print("Task IDs for goal $xml ($num): $ids\n")

