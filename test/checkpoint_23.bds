#!/usr/bin/env bds

done := false
luae := 1

void zzz(int n) {
	if( n > 2 ) {
		if( ! done ) {
			done = true
			print "Before checkpoint: zzz($n)\n"
			checkpoint "test/checkpoint_23.chp"
			print "After checkpoint: zzz($n)\n"
			luae = 42
		}
		return
	}

	for( int i=0 ; i < n ; i++ ) {
		pid := par zzz(n+1)
		print "zzz($i / $n)\t$pid\n"
	}
}

zzz(1)
wait
print "Done\n"
